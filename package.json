{
  "name": "leostar-spec",
  "private": true,
  "description": "LeoStar の 前端编码规范",
  "packageManager": "pnpm@8.12.0",
  "homepage": "https://docs-spec.netlify.app/",
  "repository": {
    "type": "git",
    "url": "git@github.com:ileostar/leostar-spec.git"
  },
