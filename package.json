  },
  "license": "MIT",
  "devDependencies": {
    "esno": "^4.0.0",
    "lerna": "^8.0.1",
    "markdownlint": "^0.32.1",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "vitepress": "1.0.0-rc.32"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
